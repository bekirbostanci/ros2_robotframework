# Include only essential files in the package distribution
include README.md
include LICENSE
include pyproject.toml

# Exclude documentation and development files
exclude docs/*
exclude examples/*
exclude tests/*
exclude .github/*
exclude venv/*
exclude dist/*
exclude build/*
exclude *.egg-info/*

# Exclude build and development scripts
exclude Makefile
exclude build.sh
exclude deploy.sh
exclude requirements*.txt

# Exclude documentation source files
exclude *.rst
exclude docs/**

# Exclude development and CI files
exclude .git*
exclude .github/**
exclude .pre-commit-config.yaml
exclude .flake8
exclude .mypy.ini
exclude tox.ini

# Exclude virtual environments and build artifacts
exclude venv/**
exclude .venv/**
exclude __pycache__/**
exclude *.pyc
exclude *.pyo
exclude *.pyd